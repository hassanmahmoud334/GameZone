@model Game 
@{ViewData["Title"]=Model.Name;}

<div class="card border-success rounded-4 mt-5 overflow-hidden">
	<div class="card-body p-0">
		<div class="row">
			<div class="col-md-8 d-flex flex-column justify-content-between">
				<div class="card-body">
						<h1 class="card-title">@Model.Name</h1>
						<h3 class="card-subtitle mb-2 text-muted">@Model.Category.Name</h3>
						<p class="card-text">@Model.Description</p>
				</div>
				<div class="px-md-3">
						<div>
							@foreach (var gameDevice in Model.Devices)
							{
							<i class="@gameDevice.Device.Icon me-2 fs-1 "></i>
							}
						</div>
				</div>
			</div>
			<div class="col-md-4">
				<img src="@($"{FileSettings.GamesImagesPath}/{Model.Cover}")" alt="@Model.Name" class="w-100" />
			</div>
		</div>
	</div>
</div>